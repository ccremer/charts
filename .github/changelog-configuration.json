{
  "pr_template": "- ${{TITLE}} (#${{NUMBER}})",
  "categories": [
    {
      "title": "## 🚀 Features",
      "labels": [
        "enhancement"
      ],
      "exhaustive": true
    },
    {
      "title": "## 🛠️ Minor Changes",
      "labels": [
        "change"
      ],
      "exhaustive": true
    },
    {
      "title": "## 🔎 Breaking Changes",
      "labels": [
        "breaking"
      ],
      "exhaustive": true
    },
    {
      "title": "## 🐛 Fixes",
      "labels": [
        "bug"
      ],
      "exhaustive": true
    },
    {
      "title": "## 📄 Documentation",
      "labels": [
        "documentation"
      ],
      "exhaustive": true
    },
    {
      "title": "## 🔗 Dependency Updates",
      "labels": [
        "dependency"
      ],
      "exhaustive": true
    }
  ],
  "ignore_labels": [
    "ignore"
  ],
  "template": "${{CATEGORIZED_COUNT}} changes since ${{FROM_TAG}}\n\n${{CHANGELOG}}",
  "tag_resolver": {
    "filter": {
      "pattern": "<from-workflow>"
    },
    "transformer": {
      "pattern": "<from-workflow>",
      "target": "$1"
    }
  }
}
